<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainscreenFragment">

    <fragment
        android:id="@+id/winningFragment"
        android:name="com.example.individualassignment_wheeloffortune.WinningFragment"
        android:label="fragment_winning"
        tools:layout="@layout/fragment_winning" >
        <action
            android:id="@+id/action_winningFragment_to_mainscreenFragment"
            app:destination="@id/mainscreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/losingFragment"
        android:name="com.example.individualassignment_wheeloffortune.LosingFragment"
        android:label="fragment_losing"
        tools:layout="@layout/fragment_losing" >
        <action
            android:id="@+id/action_losingFragment_to_mainscreenFragment"
            app:destination="@id/mainscreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainscreenFragment"
        android:name="com.example.individualassignment_wheeloffortune.MainscreenFragment"
        android:label="fragment_mainscreen"
        tools:layout="@layout/fragment_mainscreen" >
        <action
            android:id="@+id/action_mainscreenFragment_to_losingFragment"
            app:destination="@id/losingFragment" />
        <action
            android:id="@+id/action_mainscreenFragment_to_winningFragment"
            app:destination="@id/winningFragment" />
    </fragment>
</navigation>